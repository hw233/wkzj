package com.jtang.gameserver.module.buffer.type;

/**
 * 枚举buffer周期性跳动的类型
 * @author vinceruan
 *
 */
public interface CycleType {
	/** 1 - 立刻作用 */
	int RIGHT_NOW = 1;

	/** 2 - 每轮开始时跳动 */
	int BEGIN_ROUND = 2;

	/** 3 - 每轮结束时跳动 */
	int END_ROUND = 3;

	/** 4 - 战斗结束时跳动 */
	int END_FIGHT = 4;

	/** 5 - 死亡时跳动 */
	int DIE = 5;
	
	/** 6 - 击倒敌人时 */
	int KILL_ENEMY = 6;
	
	/** 7 - 射程不够时 */
	int ATTACK_UNREACHABLE = 7;
	
	/** 8 - 出手后跳动 */
	int AFTER_ATK = 8;
	
	/** 9 - 出手前跳动 */
	int BEFORE_ATK = 9;
	
//	/** 10 - 普攻时触发*/
//	int COMMON_ATK = 10;
	/** 11 - 移动时触发 */
	int MOVE = 11;
	/** 12 - 使用技能时触发 */
	int SKILL = 12;
}
